<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/run_man1"
    tools:context="speedmeter.fly.speed.Login">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtAtt"
        android:layout_alignLeft="@+id/Edpass"
        android:layout_alignStart="@+id/Edpass"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:id="@+id/txtresult" />

    <TextView
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/txtAtt"
        android:layout_alignStart="@+id/txtAtt" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/Edpass"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/Eduser"
        android:layout_centerHorizontal="true"
        android:text="password"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/Eduser"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/Edpass"
        android:layout_alignStart="@+id/Edpass"
        android:text="sad" />

    <TextView
        android:text="Attepmts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:id="@+id/txtAtt"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="true"
        android:layout_below="@+id/Edpass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:text="LOGIN"
        android:textColor="#D6D5D2"
        android:textSize="30sp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#182E27"
        android:shadowDx="6"
        android:shadowDy="0"
        android:shadowRadius="3"
        android:id="@+id/Runbtn"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/txtresult"
        android:layout_alignRight="@+id/Edpass"
        android:layout_alignEnd="@+id/Edpass"
        android:onClick="onLogin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAtt"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:layout_marginTop="25dp"
        android:id="@+id/txttimer"
        android:text="time" />

    <Button
        android:text="Register"
        android:textColor="#D6D5D2"
        android:textSize="30sp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#182E27"
        android:shadowDx="6"
        android:shadowDy="0"
        android:shadowRadius="3"
        android:id="@+id/btn_register"
        android:onClick="onregis"
        android:layout_below="@+id/Runbtn"
        android:layout_alignLeft="@+id/Runbtn"
        android:layout_alignStart="@+id/Runbtn" />

</RelativeLayout>
